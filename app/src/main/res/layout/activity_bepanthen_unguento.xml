<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    tool:contetext=".Encuesta"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="1"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lyControles">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/tvPregunta" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/lyProductos">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="多 Que recomienda ?"
                        android:id="@+id/tvQueRecomienda" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bepanthen Ung端ento"
                            android:tag="i"
                            android:padding="5dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="8dp"
                            android:id="@+id/cbA" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etA"
                            android:layout_toRightOf="@+id/cbA" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desitin"
                            android:tag="a"
                            android:padding="5dp"
                            android:id="@+id/cbB" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etB"
                            android:layout_toRightOf="@+id/cbB"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dr. Zaidman"
                            android:tag="b"
                            android:padding="5dp"
                            android:id="@+id/cbC" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etC"
                            android:layout_toRightOf="@+id/cbC"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Escaldex"
                            android:tag="c"
                            android:padding="5dp"
                            android:id="@+id/cbD" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etD"
                            android:layout_toRightOf="@+id/cbD"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hipogloss"
                            android:tag="d"
                            android:padding="5dp"
                            android:id="@+id/cbE" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etE"
                            android:layout_toRightOf="@+id/cbE"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nenegloss"
                            android:tag="e"
                            android:padding="5dp"
                            android:id="@+id/cbF" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etF"
                            android:layout_toRightOf="@+id/cbF"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nistagloss"
                            android:tag="f"
                            android:padding="5dp"
                            android:id="@+id/cbG" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etG"
                            android:layout_toRightOf="@+id/cbG"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nistazinc"
                            android:tag="g"
                            android:padding="5dp"
                            android:id="@+id/cbH" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etH"
                            android:layout_toRightOf="@+id/cbH"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ternesil"
                            android:tag="h"
                            android:padding="5dp"
                            android:id="@+id/cbI" />

                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etI"
                            android:layout_toRightOf="@+id/cbI"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        >
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Otros"
                            android:tag="ai"
                            android:padding="5dp"
                            android:id="@+id/cbJ" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:text="0"
                            android:enabled="false"
                            android:id="@+id/etJ"
                            android:layout_toRightOf="@+id/cbJ"
                            />
                    </RelativeLayout>



                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Comentario"
                            android:visibility="invisible"
                            android:id="@+id/tvComentarioOtros"
                            android:textSize="@dimen/general"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:inputType="textMultiLine"
                            android:ems="10"
                            android:enabled="true"
                            android:visibility="invisible"
                            style="@style/TextLogin"
                            android:lines="10"
                            android:scrollHorizontally="false"
                            android:scrollbars="vertical"
                            android:textSize="15sp"
                            android:id="@+id/etComentarioOtros" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/lyStock">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvStock"
                            android:text="多Tiene Stock Bepanthen Ung端ento?"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSeEncuentra"
                            android:layout_marginTop="1dip"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:id="@+id/swStock"
                            android:text=""
                            android:textOn="@string/sw_si"
                            android:textOff="@string/sw_no"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Comentario"
                android:textSize="@dimen/general"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:enabled="true"
                android:visibility="visible"
                style="@style/TextLogin"
                android:lines="20"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:textSize="15sp"
                android:id="@+id/etComentario" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR ENCUESTA"
                android:id="@+id/btGuardar"
                android:drawableRight="@drawable/ic_sync"
                style="@style/BottonBase" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>


