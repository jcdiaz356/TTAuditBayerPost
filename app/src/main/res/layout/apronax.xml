                            android:ems="10"
                            android:id="@+id/etJ"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbJ"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dolgramin"
                            android:tag="k"
                            android:padding="5dp"
                            android:id="@+id/cbK" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etK"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbK"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Breflex"
                            android:tag="l"
                            android:padding="5dp"
                            android:id="@+id/cbL" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etL"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbL"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doloaproxol"
                            android:tag="m"
                            android:padding="5dp"
                            android:id="@+id/cbM" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etM"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbM"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dioxaflex"
                            android:tag="n"
                            android:padding="5dp"
                            android:id="@+id/cbN" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etN"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbN"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flogodisten"
                            android:tag="o"
                            android:padding="5dp"
                            android:id="@+id/cbO" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etO"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbO"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aflamax"
                            android:tag="p"
                            android:padding="5dp"
                            android:id="@+id/cbP" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etP"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbP"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dolomuskqlar"
                            android:tag="q"
                            android:padding="5dp"
                            android:id="@+id/cbQ" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etQ"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbQ"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Redex"
                            android:tag="r"
                            android:padding="5dp"
                            android:id="@+id/cbR" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etR"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbR"
                            />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Otros"
                                android:tag="ai"
                                android:padding="5dp"
                                android:id="@+id/cbS" />
                            <EditText
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:inputType="number"
                                android:ems="10"
                                android:id="@+id/etS"
                                android:enabled="false"
                                android:text="0"

                                android:layout_toRightOf="@+id/cbS"
                                />
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Comentario"
                            android:visibility="invisible"
                            android:id="@+id/tvComentarioOtros"
                            android:textSize="@dimen/general"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        >

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:inputType="textMultiLine"
                            android:ems="10"
                            android:enabled="true"
                            android:visibility="invisible"
                            style="@style/TextLogin"

                            android:lines="10"
                            android:scrollHorizontally="false"
                            android:scrollbars="vertical"
                            android:textSize="15sp"
                            android:id="@+id/etComentarioOtros" />
                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:id="@+id/lyStock">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvStock"
                            android:text="¿Tiene Stock Apronax?"/>
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvSeEncuentra"
                            android:layout_marginTop="1dip"
                            android:layout_toRightOf="@+id/thumbnail"
                            android:id="@+id/swStock"
                            android:text=""
                            android:textOn="@string/sw_si"
                            android:textOff="@string/sw_no"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Comentario"
                android:textSize="@dimen/general"
                />



        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:enabled="true"
                android:visibility="visible"
                style="@style/TextLogin"
                android:lines="20"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:textSize="15sp"
                android:id="@+id/etComentario"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GUARDAR ENCUESTA"
                android:id="@+id/btGuardar"
                android:drawableRight="@drawable/ic_sync"
                style="@style/BottonBase" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>

