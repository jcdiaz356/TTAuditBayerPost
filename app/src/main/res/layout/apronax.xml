                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="900dp"
                    android:padding="5dp"
                    android:id="@+id/lyProductos"
                    android:weightSum="1">
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Que recomienda?"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp"
                    android:id="@+id/tvQueRecomienda" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apronax"
                            android:tag="a"
                            android:padding="5dp"
                            android:id="@+id/cbA" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etA"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbA"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dologyna"
                            android:tag="b"
                            android:padding="5dp"
                            android:id="@+id/cbB" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etB"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbB"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Iraxen"
                            android:tag="c"
                            android:padding="5dp"
                            android:id="@+id/cbC" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etC"
                            android:enabled="false"
                            android:text="0"
                            android:layout_toRightOf="@+id/cbC"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
