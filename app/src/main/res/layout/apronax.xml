                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dolocordralan Extra Fuerte"
                            android:tag="f"
                            android:padding="5dp"
                            android:id="@+id/cbF" />
