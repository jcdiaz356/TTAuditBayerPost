                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Miodel"
                            android:tag="j"
                            android:padding="5dp"
                            android:id="@+id/cbJ" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
