                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Miopress Forte"
                            android:tag="i"
                            android:padding="5dp"
                            android:id="@+id/cbI" />
                        <EditText
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:inputType="number"
                            android:ems="10"
                            android:id="@+id/etI"
                            android:enabled="false"
                            android:text="0"
